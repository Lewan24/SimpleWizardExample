@page "/WizardStartup"

@using SimpleWizard.Data.Entities

@inject WizardService _wizard
@inject NavigationManager _nav

<PageTitle>Wizard Startup</PageTitle>

<h4 class="text-center">Tu wizard się resetuje do ustawień domyślnych i można rozpocząć proces przechodzenia wizarda</h4>

<div class="d-flex flex-row justify-content-center">
    <button class="btn btn-primary mt-2" @onclick="StartWizard">Zacznij</button>
</div>

@code {
    protected override void OnInitialized()
    {
        _wizard.ResetToDefault();

        base.OnInitialized();
    }

    private void StartWizard() 
        => _nav.NavigateTo("WizardContent", false);
}
